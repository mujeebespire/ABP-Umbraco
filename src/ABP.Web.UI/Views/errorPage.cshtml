@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ErrorPage>

@using Clean.Core.Models.ViewModels
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@using ABP.Web.Models.UmbracoModels

@{
    Layout = "master.cshtml";
}

<div style="position: relative; width: 100%; height: 100vh; background: linear-gradient(135deg, #1f1c2c, #928dab); display: flex; justify-content: center; align-items: center; flex-direction: column; overflow: hidden; color: #0D1B2A; text-align: center; font-family: Arial, sans-serif;">

    <!-- SVG zigzag crack -->
    <svg viewBox="0 0 100 100" preserveAspectRatio="none" style="position:absolute; top:0; left:0; width:100%; height:100%; pointer-events:none;">
        <polyline points="50,0 48,10 52,20 47,30 53,40 48,50 52,60 47,70 53,80 50,90 50,100"
                  style="fill:none; stroke:#0D1B2A; stroke-width:4; stroke-linejoin:round; stroke-linecap:round; stroke-dasharray:200; stroke-dashoffset:200; animation: crackAnim 2s infinite alternate;">
        </polyline>
    </svg>

    <h1 style="font-size: 4rem; font-weight: bold; text-shadow: 2px 2px 10px rgba(0,0,0,0.3); margin-bottom: 1rem;">
        @Model.Value("title")
    </h1>
    <p style="font-size: 1.5rem; max-width: 700px; text-shadow: 1px 1px 5px rgba(0,0,0,0.2);">
        @Model.Value("description")
    </p>

</div>

<style>
    @@keyframes crackAnim {
        0% {
            stroke-dashoffset: 200;
            opacity: 0.3;
        }

        50% {
            stroke-dashoffset: 0;
            opacity: 0.7;
        }

        100% {
            stroke-dashoffset: 200;
            opacity: 0.3;
        }
    }
</style>
