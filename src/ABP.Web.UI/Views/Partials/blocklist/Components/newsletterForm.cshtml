@inherits UmbracoViewPage<BlockListItem>
@using Umbraco.Cms.Core.Models.Blocks
@using ABP.Web.Models.UmbracoModels
@{
    
    var newsletterForm = Model.Content as NewsletterForm;
    //umbraco/surface/newslettersubscription/subscribe
}
<!-- Newsletter section -->
<div class="newsletter">
    <div class="wrap">
        <div class="newsletter__wrapper">
            <div class="newsletter__container">
                <h3 class="newsletter__title">
                    @newsletterForm?.Title
                </h3>
                <form class="newsletter__form" method="post" aria-label="newsletter-heading">
                <h2 id="newsletter-heading" class="visually-hidden">Subscribe to our newsletter</h2>
                    @Html.AntiForgeryToken()
                    <input class="newsletter__input" data-val="true" data-val-email="@Umbraco.GetDictionaryValue("Newsletter.EmailIsNotValidaMessage")"
                           data-val-required="@Umbraco.GetDictionaryValue("Newsletter.EmailRequiredMessage")" id="EmailAddress" name="EmailAddress"
                           placeholder="@newsletterForm?.EmailInputPlaceholder" type="text" value="" />
                    <span class="field-validation-valid" data-valmsg-for="EmailAddress"
                          data-valmsg-replace="true"></span>
                    <button type="submit" class="btn icon font-ico-arrow-btn newsletter__btn"
                            data-controller-url="@newsletterForm?.NewletterApiPath" aria-label="Subscribe to newsletter"></button>
                    
                </form>
            </div>
        </div>
    </div>
</div>


