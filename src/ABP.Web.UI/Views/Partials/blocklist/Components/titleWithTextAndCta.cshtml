@inherits UmbracoViewPage<BlockListItem>
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions
@using ABP.Web.Models.UmbracoModels

@{
    var content = Model.Content as TitleWithTextAndCta; // strongly typed model (generated from your doc type)

    if (content == null)
    {
        return;
    }

    var title = content.Title;
    var description = content.Description; // RichText (HTML)
    var cta = content.Cta; // Link picker (Umbraco.Cms.Core.Models.Link)
}
 <div class="headline">
    <div class="wrap">
        <div class="headline__wrap">
            <!--Title-->
            @if (!string.IsNullOrWhiteSpace(title))
            {
                <h2 class="headline__title">@title</h2>
            }
            <div class="headline__content">
                @Html.Raw(description)
                <!--CTA Button-->
                @if (cta != null)
                {
                    <a href="@cta.Url"
                       target="@(cta.Target)"
                       class="btn-home btn-home--cta">
                        <span class="btn-home__text">@cta.Name</span>
                    </a>
                }
            </div>
        </div>
    </div>
</div> 

