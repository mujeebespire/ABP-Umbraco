@inherits UmbracoViewPage<BlockListItem>
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Extensions

@{
    // Get block content
    var content = Model.Content;

    var title = content.Value<string>("title");
    var richContent = content.Value<string>("content"); // Richtext editor content
    var backgroundColor = content.Value<string>("backgroundColor"); // dropdown value

    // Handle background color (optional CSS-based)
    var bgClass = !string.IsNullOrWhiteSpace(backgroundColor) ? $"bg-{backgroundColor.Trim()}" : "";
}

@if (!string.IsNullOrWhiteSpace(richContent))
{
    <!-- Table Block -->
    <div class="main">
    <div class="wrap wrap--small">
    <div class="rte">
        <p>@title</p>
        

            @Html.Raw(richContent)
            </div>

    </div>

    </div>
}
